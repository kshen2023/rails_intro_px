<!-- app/views/teachers/index.html.erb -->

<h1 class="text-3xl font-bold mb-6">Teachers</h1>

<%= form_with(url: teachers_path, method: "get", class: "mb-4") do %>
  <%= text_field_tag :search, params[:search], class: "border border-gray-300 rounded-md py-2 px-4 mr-2 focus:outline-none focus:border-blue-500", placeholder: "Enter search keyword" %>
  <%= submit_tag "Search", class: "bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 focus:outline-none focus:bg-blue-600" %>
<% end %>

<% if @teachers.any? %>
  <ul class="space-y-4">
    <% @teachers.each do |teacher| %>
      <li class="bg-white shadow-md rounded-md p-4">
        <%= link_to teacher.teacher_name, teacher_path(teacher), class: "text-blue-600 hover:underline" %>
      </li>
    <% end %>
  </ul>

  <%= paginate @teachers, class: "my-4" %>
<% else %>
  <p class="mt-4">No teachers found.</p>
<% end %>

