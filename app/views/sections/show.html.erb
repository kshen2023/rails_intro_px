<!-- app/views/sections/show.html.erb -->

<h1><%= @section.section_name %></h1>

<p>Description: <%= @section.section_description %></p>

<h2>School: <%= @section.school.school_name %></h2>

<h2>Students</h2>
<ul>
  <% @section.students.each do |student| %>
    <li><%= link_to student.student_name, student_path(student) %></li>
  <% end %>
</ul>

<%= link_to 'Back to Sections', sections_path %>
