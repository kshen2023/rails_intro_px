<!-- app/views/students/index.html.erb -->

<h1 class="text-3xl font-bold mb-6">Students</h1>

<ul class="space-y-4">
  <% @students.each do |student| %>
    <li class="bg-white shadow-md rounded-md p-4">
      <%= link_to student.student_name, student_path(student), class: "text-blue-600 hover:underline" %>
      <!-- Adjust the link_to as per your application's needs -->
    </li>
  <% end %>
</ul>

<%= link_to 'New Student', new_student_path, class: "inline-block mt-4 px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600" %>
